<div class="row">
    <div class="col-sm-6">
        <span class="navbar-text">
            Messages for <strong><a href="mailto:{{user.address}}">{{user.address}}</a></strong>
        </span>
    </div>
    <div class="col-sm-6">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <li style="padding-right: 1rem;">
                    <span class="navbar-text">
                        Page <strong>{{page}}</strong>
                    </span>
                </li>

                {{#if previous}}
                    <li class="page-item">
                        <a class="page-link" href="{{previous}}" tabindex="-1"><span class="oi oi-arrow-left" title="Newer" aria-hidden="true"></span> Newer</a>
                    </li>
                {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1"><span class="oi oi-arrow-left" title="Newer" aria-hidden="true"></span> Newer</a>
                    </li>
                {{/if}}

                {{#if next}}
                    <li class="page-item">
                        <a class="page-link" href="{{next}}" tabindex="-1">Older <span class="oi oi-arrow-right" title="Older" aria-hidden="true"></span></a>
                    </li>
                {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Older <span class="oi oi-arrow-right" title="Older" aria-hidden="true"></span></a>
                    </li>
                {{/if}}
            </ul>
        </nav>

    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-responsive table-striped table-bordered table-hover table-sm">
            <tbody>
                {{#each results}}
                    <tr style="{{#unless seen}}font-weight: bold;{{/unless}}" class="{{#if deleted}}table-danger{{/if}}">
                        <td>
                            {{#if flagged}}
                                <span class="oi oi-star text-warning" title="Message is flagged"></span>
                            {{/if}}
                            {{#if outbound}}
                                To: {{{toHtml}}}
                            {{else}}
                                {{{fromHtml}}}
                            {{/if}}
                        </td>
                        <td>
                            <a href="/messages/{{mailbox}}/{{id}}">{{#if subject}}{{subject}}{{else}}&lt;untitled&gt;{{/if}}</a>
                        </td>
                        <td>
                            {{#if attachments}}
                                <div class="float-right">
                                    <span class="oi oi-paperclip" title="Has attachment" aria-hidden="true"></span>
                                </div>
                            {{/if}}
                            <span class="datestring" title="{{date}}">
                            {{date}}
                        </span>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
